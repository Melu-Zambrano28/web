<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>gestionaleSportivo</display-name>

    <welcome-file-list>
        <welcome-file>Gestore.jsp</welcome-file>
        <welcome-file>InserisciCliente.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ServletInserisciStadio</servlet-name>
        <servlet-class>it.fides.sportivo.servlet.ServletInserisciStadio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInserisciSquadra</servlet-name>
        <servlet-class>it.fides.sportivo.servlet.ServletInserisciSquadra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInserisciCliente</servlet-name>
        <servlet-class>it.fides.sportivo.servlet.ServletInserisciCliente</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>ServletInserisciPartita</servlet-name>
        <servlet-class>it.fides.sportivo.servlet.ServletInserisciPartita</servlet-class>
        </servlet>

    <servlet-mapping>
        <servlet-name>ServletInserisciStadio</servlet-name>
        <url-pattern>/inserisciStadio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInserisciSquadra</servlet-name>
        <url-pattern>/inserisciSquadra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInserisciCliente</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInserisciPartita</servlet-name>
        <url-pattern>/ajaxPartita</url-pattern>  <!-- da cambiare -->
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/</location>
    </error-page>



</web-app>
