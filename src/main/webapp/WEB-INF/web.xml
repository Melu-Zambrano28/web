<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>gestionaleSportivo</display-name>
    <servlet>
        <servlet-name>ServletInserisciStadio</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletInserisciStadio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInserisciSquadra</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletInserisciSquadra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInserisciPartita</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletInserisciPartita</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInserisciCliente</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletInserisciCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPartitaAjax</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletPartitaAjax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletModificaStadio</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletModificaStadio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSconto</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletSconto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletVissualizzaPartita</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletVisualizzaPartita</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCalcolaPrezzo</servlet-name>
        <servlet-class>it.esempio.sportivo.servlet.ServletCalcolaPrezzo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInserisciStadio</servlet-name>
        <url-pattern>/inserisciStadio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInserisciSquadra</servlet-name>
        <url-pattern>/inserisciSquadra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInserisciPartita</servlet-name>
        <url-pattern>/inserisciPartita</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInserisciCliente</servlet-name>
        <url-pattern>/inserisciCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPartitaAjax</servlet-name>
        <url-pattern>/ajaxPartita</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletModificaStadio</servlet-name>
        <url-pattern>/modificaStadio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSconto</servlet-name>
        <url-pattern>/sconto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVissualizzaPartita</servlet-name>
        <url-pattern>/vediPartita</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCalcolaPrezzo</servlet-name>
        <url-pattern>/calcolaPrezzo</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Gestore.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
